body{
  background:url(https://api.yingjoy.cn/pic/?t=random&w=1920);
  background:url(https://uploadbeta.com/api/pictures/random/?key=BingEverydayWallpaperPicture);
  background-repeat: no-repeat;
  background-size: cover;
  width: 100%;
  opacity: 1;
   background-attachment:fixed;
   background-position:50% 50%;
}

.main-inner { 
    opacity: 0.9;
    min-height: 500px;
}

// Custom styles.
code {
  color: skyblue;
  background: #fbf7f8;
  margin: 2px;
}

// 大代码块的自定义样式
.highlight, pre {
  margin: 5px 0;
  padding: 5px;
  border-radius: 3px;
}

.highlight, code, pre {
  border: 1px solid #d6d6d6;
}

.post {
  background: #fff;
  margin: 0 25px;
  margin-bottom: 60px;
  padding: 25px;
  -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
  -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
}

.post-expand{
  padding-top: 0;
}
.post-footer{
  display: none;
}

#header{
  position: relative;
  opacity: 0.85;
  background: #fff;
}

#canvas{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 1;
}
.brand{
  background: transparent;
  color: #000;
}
.brand:hover{
  color: #000;
}
#comments{
  padding: 25px;
  background: #fff;
}
.container{
  background: transparent
}

.posts-collapse::after{
  bottom: 0px;
  height: auto;
}

.page-archive .archive-page-counter{
  color: #000;
  display: none;
}
.archive-year{
  color: #000;
}
.category-all-page .category-all{
  padding: 0 36px;
}